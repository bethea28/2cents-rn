{
  "expo": {
    "name": "2Cents",
    "slug": "2cents-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "twocents",
    "newArchEnabled": true,
    "iosUrlScheme": "com.googleusercontent.apps.812679289010-a1os4021hbvflsdp0mho5nm0q21o58gq",
    "ios": {
      "useModularHeaders": true,
      "supportsTablet": false,
      "bundleIdentifier": "com.bethea28.twocents",
      "usesAppleSignIn": true,
      "googleServicesFile": "./GoogleService-Info.plist",
      "infoPlist": {
        "NSCameraUsageDescription": "2Cents needs the camera to record your challenges.",
        "NSMicrophoneUsageDescription": "2Cents needs the microphone for your rebuttals.",
        "NSPhotoLibraryUsageDescription": "2Cents needs access to save your videos."
      }
    },
    "android": {
      "package": "com.bethea28.twocents",
      "largeHeap": true,
      "googleServicesFile": "./google-services.json",
      "hardwareAccelerated": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "POST_NOTIFICATIONS"
      ]
    },
    "plugins": [
      "react-native-compressor",
      "expo-router",
      "expo-apple-authentication",
      "expo-notifications",
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": false,
          "supportsPictureInPicture": false
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.812679289010-a1os4021hbvflsdp0mho5nm0q21o58gq"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow 2Cents to access your camera",
          "microphonePermission": "Allow 2Cents to access your microphone"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "gradleVersion": "8.13",
            "kotlinVersion": "2.0.0",
            "extraParams": {
              "android.enableJetifier": "true"
            }
          },
          "ios": {
            "useStaticFrameworks": true,
            "useModularHeaders": true // <--- ADD THIS LINE
          }
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b2287a9e-7279-4a1e-a5d3-d15e9874493d"
      }
    }
  }
}